{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Fast DSL",
  "patterns": [
    { "include": "#comments" },
    { "include": "#props" },
    { "include": "#state" },
    { "include": "#effects" },
    { "include": "#memos" },
    { "include": "#events" },
    { "include": "#types" },
    { "include": "#jsx" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.rdsl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.rdsl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "props": {
      "patterns": [
        {
          "match": "(:)(\\w+)(::)?([\\w\\[\\]<>|&?]+)?",
          "captures": {
            "1": { "name": "keyword.operator.prop.rdsl" },
            "2": { "name": "variable.parameter.rdsl" },
            "3": { "name": "keyword.operator.type.rdsl" },
            "4": { "name": "support.type.rdsl" }
          }
        }
      ]
    },
    "state": {
      "patterns": [
        {
          "match": "(@)(\\w+)(::)?([\\w\\[\\]<>|&?]+)?\\s*(=)",
          "captures": {
            "1": { "name": "keyword.operator.state.rdsl" },
            "2": { "name": "variable.other.state.rdsl" },
            "3": { "name": "keyword.operator.type.rdsl" },
            "4": { "name": "support.type.rdsl" },
            "5": { "name": "keyword.operator.assignment.rdsl" }
          }
        }
      ]
    },
    "effects": {
      "patterns": [
        {
          "match": "(\\$)(\\w+)",
          "captures": {
            "1": { "name": "keyword.operator.effect.rdsl" },
            "2": { "name": "entity.name.function.effect.rdsl" }
          }
        }
      ]
    },
    "memos": {
      "patterns": [
        {
          "match": "(%)(\\w+)(::)?([\\w\\[\\]<>|&?]+)?\\s*(=)",
          "captures": {
            "1": { "name": "keyword.operator.memo.rdsl" },
            "2": { "name": "variable.other.memo.rdsl" },
            "3": { "name": "keyword.operator.type.rdsl" },
            "4": { "name": "support.type.rdsl" },
            "5": { "name": "keyword.operator.assignment.rdsl" }
          }
        }
      ]
    },
    "events": {
      "patterns": [
        {
          "match": "(!)(\\w+)\\s*(=)",
          "captures": {
            "1": { "name": "keyword.operator.event.rdsl" },
            "2": { "name": "entity.name.function.event.rdsl" },
            "3": { "name": "keyword.operator.assignment.rdsl" }
          }
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.rdsl",
          "match": "\\b(string|number|boolean|any|void|null|undefined|str|num|bool)\\b"
        },
        {
          "name": "support.type.builtin.rdsl",
          "match": "\\b(Array|Object|Function|Promise|Date|RegExp|Map|Set)\\b"
        }
      ]
    },
    "jsx": {
      "patterns": [
        {
          "name": "meta.tag.jsx.rdsl",
          "begin": "(<)(/?)(\\w+)",
          "beginCaptures": {
            "1": { "name": "punctuation.definition.tag.begin.jsx" },
            "2": { "name": "punctuation.definition.tag.slash.jsx" },
            "3": { "name": "entity.name.tag.jsx" }
          },
          "end": "(>)",
          "endCaptures": {
            "1": { "name": "punctuation.definition.tag.end.jsx" }
          },
          "patterns": [
            { "include": "#jsx-attributes" }
          ]
        },
        {
          "name": "meta.embedded.expression.jsx",
          "begin": "{",
          "beginCaptures": {
            "0": { "name": "punctuation.section.embedded.begin.jsx" }
          },
          "end": "}",
          "endCaptures": {
            "0": { "name": "punctuation.section.embedded.end.jsx" }
          },
          "patterns": [
            { "include": "#expression" }
          ]
        },
        {
          "name": "keyword.control.loop.each.rdsl",
          "match": "\\b(each)\\b"
        },
        {
          "name": "keyword.control.in.rdsl",
          "match": "\\b(in)\\b"
        }
      ]
    },
    "jsx-attributes": {
      "patterns": [
        {
          "match": "(@)(\\w+)\\s*(=)\\s*(\\w+)",
          "captures": {
            "1": { "name": "keyword.operator.event.jsx" },
            "2": { "name": "entity.other.attribute-name.event.jsx" },
            "3": { "name": "keyword.operator.assignment.jsx" },
            "4": { "name": "variable.other.event-handler.jsx" }
          }
        },
        {
          "match": "(\\w+)\\s*(=)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.jsx" },
            "2": { "name": "keyword.operator.assignment.jsx" }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rdsl",
          "match": "\\b(if|else|for|while|return|break|continue)\\b"
        },
        {
          "name": "constant.language.rdsl",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.rdsl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.rdsl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.rdsl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.rdsl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.rdsl",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.rdsl",
          "match": "(\\+\\+|--|\\+=|-=|\\*=|/=|\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.comparison.rdsl",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.rdsl",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arrow.rdsl",
          "match": "=>"
        },
        {
          "name": "keyword.operator.assignment.rdsl",
          "match": "="
        }
      ]
    },
    "expression": {
      "patterns": [
        { "include": "#strings" },
        { "include": "#numbers" },
        { "include": "#operators" },
        { "include": "#identifiers" }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.rdsl",
          "match": "\\b[a-zA-Z_]\\w*\\b"
        }
      ]
    }
  },
  "scopeName": "source.jsx.dsl"
}